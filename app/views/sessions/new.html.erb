<div class="background-image"></div>
<div class="pop-up">
  <h1 class="logo">Smart Cookie</h1>

  <form class="sign-in group" action="<%= session_url %>" method="post">
    <%= authenticity_token %>

    <label>
      <input type="text" name="user[email]" value="" id="email" placeholder="Email">
    </label>

    <label>
      <input type="password" name="user[password]" value="" id="password" placeholder="Password">
    </label>

    <p class="errors">
      <%= render "errors" %>
    </p>

    <div class="group">
      <button>Log In!</button>
    </div>

    <a class="twitter-login" href="/auth/twitter">Sign In with Twitter</a>
  </form>

  <form class="guest-login" action="<%= session_demo_url %>" method="post">
    <%= authenticity_token %>
    <button>Sign In as Demo User</button>
  </form>

  <br>

  <p>Don't have an account? <a href="<%= new_user_url %>">Sign Up!</a></p>

</div>
