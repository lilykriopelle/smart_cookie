<div class="background-image"></div>
<div class="pop-up sign-up">
  <h1 class="logo">Smart Cookie</h1>

  <div class="errors"> <%= render "errors" %> </div>

  <form class="group" action="<%= users_url %>" method="post">
    <%= authenticity_token %>

    <label>
      Name:
      <input type="text" name="user[name]" value="">
    </label>
    <br>
    <label>
      Email:
      <input type="text" name="user[email]" value="">
    </label>
    <br>
    <label>
      Password:
      <input type="password" name="user[password]" value="">
    </label>
    <br>

    <div class="sign-up-button group">
      <button>Sign Up!</button>
    </div>

    <a class="twitter-signup" href="/auth/twitter">Sign Up with Twitter</a>
  </form>

  <p class="blurb">
    SmartCookie is a collaborative recipe development platform inspired by Genius.
  </p>
  <p>
    Already have an account? <a href="<%= new_session_url %>">Sign In!</a>
  </p>

</div>
