<h3> Create a New Recipe </h3>

<form class="new-recipe-form" action="<%= api_recipes_url %>" method="post">
  <%= authenticity_token %>

  <label>
    Title
    <input type="text" name="recipe[title]" value="">
  </label>
  <br><br>

  <label>
    Ingredients <br>
    <%= render "ingredient" %> <br>
    <%= render "ingredient" %> <br>
    <%= render "ingredient" %> <br>
  </label>

  <br><br>
  <label>
    Instructions
    <textarea name="recipe[instructions]" value=""></textarea>
  </label>

  <button>Create Recipe</button>
</form>
