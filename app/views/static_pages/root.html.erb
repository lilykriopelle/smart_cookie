<!DOCTYPE html>
<html>
<head>
  <title> CookingGenius </title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <script>
    CookingGenius.units = <%= RecipesIngredient::UNITS.to_json.html_safe %>;

    $(document).ready(function() {
      CookingGenius.initialize({userId: <%= current_user.id %>});
    });

  </script>

</head>
<body>

<%= render "partials/logged_in", user: current_user %>


<div id="content"></div>

<%= yield %>

</body>
</html>
